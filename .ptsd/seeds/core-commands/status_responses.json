{
  "description": "Mapping of job states to expected stdout for the status command",
  "scenarios": {
    "done": {
      "status_file_content": "done",
      "expected_stdout": "done\n",
      "expected_exit": 0
    },
    "running": {
      "status_file_content": "running",
      "pid_alive": true,
      "expected_stdout": "running\n",
      "expected_exit": 0
    },
    "running_stale": {
      "status_file_content": "running",
      "pid_alive": false,
      "expected_stdout": "failed\n",
      "expected_exit": 0,
      "notes": "PID is dead, so status is updated to failed before printing"
    },
    "failed": {
      "status_file_content": "failed",
      "expected_stdout": "failed\n",
      "expected_exit": 0
    },
    "timeout": {
      "status_file_content": "timeout",
      "expected_stdout": "timeout\n",
      "expected_exit": 0
    },
    "killed": {
      "status_file_content": "killed",
      "expected_stdout": "killed\n",
      "expected_exit": 0
    },
    "permission_error": {
      "status_file_content": "permission_error",
      "expected_stdout": "permission_error\n",
      "expected_exit": 0
    },
    "not_found": {
      "job_id": "job-20260227-999999-deadbeef",
      "expected_error": "err:not_found Job not found: job-20260227-999999-deadbeef",
      "expected_exit": 3
    }
  }
}
